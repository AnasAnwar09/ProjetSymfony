{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Livre list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titrelivre</th>
                <th>Noticelivre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('livre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titreLivre }}</td>
                <td>{{ entity.noticeLivre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('livre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('livre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>

    {% endfor %}

    <ul>
        <li>
            <a href="{{ path('livre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
