{% extends "GestionBibliothequeBundle::conservateurIndex.html.twig" %}
{% block contenu %}
    <div class="well">
        <legend>Ajouter un nouveau thème</legend>
        {{ form_start(form, {'attr':{'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.descriptionTheme, "Nom Lecteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.descriptionTheme) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.descriptionTheme, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.livre_theme, "Prenom Lecteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.livre_theme) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.livre_theme, {'attr': {'class': 'form-control'}}) }}
            </div>
            <input type="submit" class="btn btn-default" />

        </div>

        {{ form_end(form) }}
    </div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('theme') }}">
            Retour à la liste des thèmes
        </a>
    </li>
</ul>
{% endblock %}
