{% extends "GestionBibliothequeBundle::conservateurIndex.html.twig" %}
{% block contenu %}
<div class="well">
    <legend>Modification Auteur</legend>
    {{ form_start(edit_form, {'attr':{'class': 'form-horizontal'}}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.nomAuteur, "Nom Auteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.nomAuteur) }}

        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.nomAuteur, {'attr': {'class': 'form-control'}}) }}
        </div>


    </div>
    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.prenomAuteur, "Prénom Auteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.prenomAuteur) }}

        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.prenomAuteur, {'attr': {'class': 'form-control'}}) }}
        </div>


    </div>
    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.livres_ecrits, "Livres écrits", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.livres_ecrits) }}

        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.livres_ecrits, {'attr': {'class': 'form-control'}}) }}
        </div>
        <input type="submit" class="btn btn-default" />

    </div>
    {{ form_end(edit_form) }}

</div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('auteur') }}">
            Retour à la liste d'auteurs
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
