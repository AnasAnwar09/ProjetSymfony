{% extends "GestionBibliothequeBundle::magasinierIndex.html.twig" %}
{#}%  form_theme form 'bootstrap_3_layout.html.twig' %#}
{# {%  form_theme form 'bootstrap_3_horizontal_layout.html.twig' %} #}
{%  block contenu %}
    <div class="well">
        <legend>Ajouter ou Modifier un exemplaire</legend>

        {% if message %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endif %}


        {{ form_start(form, {'attr':{'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.numeroExemplaire, "Numero Exemplaire", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.numeroExemplaire) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.numeroExemplaire, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.livre, "Titre du livre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.livre) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.livre, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.etagere, "Etagère", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.etagere) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.etagere, {'attr': {'class': 'form-control'}}) }}
            </div>
            <input type="submit" class="btn btn-default" />

        </div>

        {{ form_end(form) }}
        <p><a href="{{ path('gestion_exemplaire_lister') }}">Retour à la liste des exemplaires</a></p>
    </div>
{%  endblock %}


