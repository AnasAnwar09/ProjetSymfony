{% extends "GestionBibliothequeBundle::inscritIndex.html.twig" %}
{% block contenu %}
    <div>
        <legend>Liste des facultés</legend>
        <table class="table table bordered table striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Désignation de la faculté</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('faculte_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.designationFaculte }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('faculte_show', { 'id': entity.id }) }}">Détails</a>
                    </li>
                    <li>
                        <a href="{{ path('faculte_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('faculte_new') }}">
                Créer une nouvelle faculté
            </a>
        </li>
    </ul>
    </div>
{% endblock %}
