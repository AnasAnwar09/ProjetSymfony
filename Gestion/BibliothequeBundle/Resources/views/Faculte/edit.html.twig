{% extends "GestionBibliothequeBundle::inscritIndex.html.twig" %}
{% block contenu %}
<div class="well">
    <legend>Modification de la faculté</legend>
    {{ form_start(edit_form, {'attr':{'class': 'form-horizontal'}}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.designationFaculte, "Désignation de la faculté", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.designationFaculte) }}

        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.designationFaculte, {'attr': {'class': 'form-control'}}) }}
        </div>
        <input type="submit" class="btn btn-default" />

    </div>
    {{ form_end(edit_form) }}
        <ul class="record_actions">
    <li>
        <a href="{{ path('faculte') }}">
            Retourner à la liste
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
{% endblock %}
