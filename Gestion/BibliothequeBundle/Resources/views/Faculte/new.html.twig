{% extends "GestionBibliothequeBundle::inscritIndex.html.twig" %}
{% block contenu %}
<div class="well">
    <legend>Création de la faculté</legend>
    {{ form_start(form, {'attr':{'class': 'form-horizontal'}}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.designationFaculte, "Désignation de la faculté", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.designationFaculte) }}

        <div class="col-sm-4">
            {# Génération de l'input. #}
            {{ form_widget(form.designationFaculte, {'attr': {'class': 'form-control'}}) }}
        </div>
        <input type="submit" class="btn btn-default" />

    </div>
    {{ form_end(form) }}



        <ul class="record_actions">
    <li>
        <a href="{{ path('faculte') }}">
            Retourner à la liste des facultés
        </a>
    </li>
</ul>
    </div>
{% endblock %}
