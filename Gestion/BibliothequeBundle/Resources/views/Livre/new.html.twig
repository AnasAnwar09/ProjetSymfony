{% extends "GestionBibliothequeBundle::ConservateurIndex.html.twig" %}
{% block contenu %}
    <div class="well">
        <legend>Ajouter un livre</legend>

        {{ form_start(form, {'attr':{'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.titreLivre, "Nom Lecteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.titreLivre) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.titreLivre, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.noticeLivre, "Prenom Lecteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.noticeLivre) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.noticeLivre, {'attr': {'class': 'form-control'}}) }}
            </div>


        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.auteur, "Cycle Lecteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.auteur) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.theme_livre, "Faculté", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.theme_livre) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.theme_livre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <input type="submit" class="btn btn-default" />

        </div>
        {{ form_end(form) }}

    </div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('livre') }}">
            Retour à la liste des livres
        </a>
    </li>
</ul>
{% endblock %}
